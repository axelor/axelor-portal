<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_7.0.xsd">

  <grid model="com.axelor.apps.portal.db.ForumGroup" title="Forum groups"
    name="forum-group-grid">
    <field name="name"/>
    <field name="workspace"/>
  </grid>

  <form model="com.axelor.apps.portal.db.ForumGroup" title="Forum group"
    name="forum-group-form" width="large" onNew="action-forum-group-attrs-set-workspace">
    <panel name="mainPanel" colSpan="12">
      <panel name="imagePanel" colSpan="2">
        <field name="image" widget="image"
          onChange="action-portal-forum-group-record-create-thumbnail-image"/>
        <field name="thumbnailImage" hidden="true"/>
      </panel>
      <panel name="fieldsPanel" colSpan="10" itemSpan="12">
        <field name="name" colSpan="11"/>
        <field name="isPrivate" colSpan="1"/>
        <field name="workspace"/>
        <field name="groupConfig"/>
      </panel>
      <field name="description" colSpan="12"/>
      <field name="partnerSet" colSpan="12" showIf="isPrivate"/>
      <field name="partnerCategorySet" colSpan="12" showIf="isPrivate"/>
    </panel>
  </form>

  <action-attrs name="action-forum-group-attrs-set-workspace">
    <attribute name="value" for="workspace" expr="eval: __user__.workspace"/>
  </action-attrs>

  <action-record name="action-portal-forum-group-record-create-thumbnail-image"
    model="com.axelor.apps.portal.db.ForumGroup">
    <field name="thumbnailImage"
      expr="call: com.axelor.apps.portal.utils.ImageUtils:createThumbnail(image)"/>
  </action-record>

</object-views>