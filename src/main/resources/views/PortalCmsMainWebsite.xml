<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_7.0.xsd">

  <grid model="com.axelor.apps.portal.db.PortalCmsMainWebsite" title="CMS main websites"
    name="portal-portal-cms-main-website-grid">
    <field name="name"/>
    <field name="defaultWebsite"/>
  </grid>

  <form model="com.axelor.apps.portal.db.PortalCmsMainWebsite" title="CMS main website"
    name="portal-portal-cms-main-website-form" width="large">
    <panel name="mainPanel" colSpan="12">
      <field name="name" required="true"/>
      <field name="defaultWebsite"/>
      <field name="languageList" colSpan="12"/>
      <field name="workspaceSet" colSpan="12"/>
    </panel>
  </form>

</object-views>