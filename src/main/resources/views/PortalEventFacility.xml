<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_7.0.xsd">

  <grid name="portal-portal-event-facility-grid" title="Portal event facilities"
    model="com.axelor.apps.portal.db.PortalEventFacility" editable="true">
    <field name="facility"/>
    <field name="product" canNew="true"/>
    <field name="price"/>
  </grid>

  <form name="portal-portal-event-facility-form" title="Portal event facility"
    model="com.axelor.apps.portal.db.PortalEventFacility" width="large">
    <panel name="mainPanel">
      <field name="facility" required="true"/>
      <field name="product" canNew="true"/>
      <field name="price"/>
    </panel>
  </form>

</object-views>