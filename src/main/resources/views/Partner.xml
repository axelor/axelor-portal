<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_7.0.xsd">

  <form name="partner-form" id="portal-partner-form" title="Partner"
    model="com.axelor.apps.base.db.Partner" extension="true">
    <extend target="//field[@name='customerShippingCarriagePaidList']">
      <insert position="before">
        <panel name="portalPanel" colSpan="12">
          <field name="portalPassword" widget="password"/>
          <field name="partnerWorkspaceSet" widget="TagSelect" colSpan="12"/>
          <field name="defaultWorkspace" domain="self IN (:partnerWorkspaceSet)"/>
        </panel>
      </insert>
    </extend>
  </form>

  <form name="partner-contact-form" id="portal-partner-contact-form" title="Contact"
    model="com.axelor.apps.base.db.Partner" extension="true">
    <extend target="//panel-tabs[@name='mainPanelTab']/*[last()]">
      <insert position="after">
        <panel title="Portal" name="portalPanel">
          <field name="portalPassword" widget="password"/>
          <field name="contactWorkspaceConfigSet" widget="TagSelect" colSpan="12"/>
        </panel>
      </insert>
    </extend>
  </form>

</object-views>