<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_7.0.xsd">

  <form name="partner-form" id="portal-partner-form" title="Partner"
    model="com.axelor.apps.base.db.Partner" extension="true">
    <extend target="//panel-tabs[@name='mainPanelTab']">
      <insert position="inside">
        <panel title="Portal" name="portalPanel" colSpan="12">
          <field name="isAllowedToRegister" colSpan="3"/>
          <field name="isActivatedOnPortal" colSpan="3"/>
          <field name="isPublicPartner" colSpan="3"/>
          <field name="canSubscribeNoPublicEvent" colSpan="3"/>
          <field name="portalCompanyName"/>
          <field name="canEditWiki" colSpan="3"/>
          <field name="partnerWorkspaceSet" widget="TagSelect" colSpan="12"/>
          <field name="defaultWorkspace" domain="self IN (:partnerWorkspaceSet)"/>
          <field name="createdFromSelect"/>
          <field name="portalUserPreferenceList" colSpan="12"/>
          <panel name="directoryPanel" colSpan="12">
            <field name="isInDirectory" colSpan="3"/>
            <field name="isEmailInDirectory" colSpan="3"/>
            <field name="isPhoneInDirectory" colSpan="3"/>
            <field name="isWebsiteInDirectory" colSpan="3"/>
            <field name="isAddressInDirectory" colSpan="3"/>
            <field name="isFunctionInDirectory" colSpan="3"/>
            <field name="isLinkedinInDirectory" colSpan="3"/>
            <field name="directoryCompanyDescription" colSpan="12" widget="html"/>
          </panel>
        </panel>
      </insert>
    </extend>
  </form>

  <form name="partner-contact-form" id="portal-partner-contact-form" title="Contact"
    model="com.axelor.apps.base.db.Partner" extension="true">
    <extend target="/">
      <attribute name="onSave" value="action-contact-group-on-save"/>
    </extend>
    <extend target="//panel-tabs[@name='mainPanelTab']">
      <insert position="inside">
        <panel title="Portal" name="portalPanel">
          <field name="linkedinLink"/>
          <field name="isAllowedToRegister" colSpan="3"/>
          <field name="isActivatedOnPortal" colSpan="3"/>
          <field name="isPublicPartner" colSpan="3"/>
          <field name="canSubscribeNoPublicEvent" colSpan="3"/>
          <field name="portalCompanyName"/>
          <field name="canEditWiki" colSpan="3"/>
          <field name="createdFromSelect"/>
          <field name="contactWorkspaceConfigSet" widget="TagSelect" colSpan="12"
            domain="self.id NOT IN (SELECT cwc.id FROM PortalContactWorkspaceConfig cwc WHERE cwc.partner IN (SELECT p.partner FROM PortalContactWorkspaceConfig p WHERE p IN :contactWorkspaceConfigSet)
			  AND cwc.portalWorkspace IN (SELECT w.portalWorkspace FROM PortalContactWorkspaceConfig w WHERE w IN :contactWorkspaceConfigSet))"/>
          <field name="portalUserPreferenceList" colSpan="12"/>
          <panel name="directoryPanel" colSpan="12">
            <field name="isInDirectory" colSpan="3"/>
            <field name="isEmailInDirectory" colSpan="3"/>
            <field name="isPhoneInDirectory" colSpan="3"/>
            <field name="isWebsiteInDirectory" colSpan="3"/>
            <field name="isAddressInDirectory" colSpan="3"/>
            <field name="isFunctionInDirectory" colSpan="3"/>
            <field name="isLinkedinInDirectory" colSpan="3"/>
          </panel>
        </panel>
      </insert>
    </extend>
  </form>

  <action-group name="action-partner-group-onsave"
    id="portal-action-partner-group-onsave">
    <action name="action-partner-iban-check-on-save"/>
    <action name="save"/>
    <action name="action-partner-method-set-user-partner"/>
    <action name="action-method-partner-check-registration-code"/>
    <action name="action-partner-method-create-user-mattermost"/>
  </action-group>

  <action-method name="action-partner-method-create-user-mattermost">
    <call class="com.axelor.apps.portal.mattermost.web.PartnerController" method="createUser"/>
  </action-method>

  <action-group name="action-contact-group-on-save">
    <action name="save"/>
    <action name="action-partner-method-set-user-partner"/>
    <action name="action-partner-method-add-contact-partner"/>
    <action name="action-partner-method-create-user-mattermost"/>
  </action-group>

  <grid name="portal-partner-non-contact-grid" title="Partners (Companies)"
    model="com.axelor.apps.base.db.Partner">
    <toolbar>
      <button name="sendExampleEmailBtn" title="Send example email"
        onClick="action-portal-partner-view-select-workspace-popup"/>
    </toolbar>
    <field name="partnerSeq"/>
    <field name="simpleFullName"/>
    <field name="fixedPhone"/>
    <field name="emailAddress"/>
    <field name="mainAddress"/>
  </grid>

  <form model="com.axelor.utils.db.Wizard" title="Select workspace"
    name="partner-send-email-wizard-form">
    <panel name="mainPanel" colSpan="12">
      <field name="$portalWorkspace" title="Workspace" type="many-to-one"
        target="com.axelor.apps.portal.db.PortalWorkspace" required="true"/>
      <button name="sendEmailBtn" title="Send email"
        onClick="action-portal-partner-method-send-example-email, close"/>
    </panel>
  </form>

  <action-view name="action-portal-partner-view-select-workspace-popup"
    title="Select workspace" model="com.axelor.utils.db.Wizard">
    <view type="form" name="partner-send-email-wizard-form"/>
    <view-param name="popup" value="reload"/>
    <view-param name="show-toolbar" value="false"/>
    <view-param name="show-confirm" value="false"/>
    <view-param name="popup-save" value="false"/>
    <view-param name="forceEdit" value="true"/>
    <context name="_ids" expr="eval: _ids"/>
  </action-view>

  <action-method name="action-portal-partner-method-send-example-email">
    <call class="com.axelor.apps.portal.web.PartnerPortalController"
      method="sendExampleEmailToSelectedPartners"/>
  </action-method>

</object-views>