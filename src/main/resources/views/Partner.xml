<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_7.0.xsd">

  <form name="partner-form" id="portal-partner-form" title="Partner"
    model="com.axelor.apps.base.db.Partner" extension="true">
    <extend target="//panel-tabs[@name='mainPanelTab']/*[last()]">
      <insert position="after">
        <panel title="Portal" name="portalPanel" colSpan="12">
          <field name="portalPassword" widget="password"/>
          <field name="isRegisteredOnPortal" colSpan="3"/>
          <field name="isActivatedOnPortal" colSpan="3"/>
          <field name="partnerWorkspaceSet" widget="TagSelect" colSpan="12"/>
          <field name="defaultWorkspace" domain="self IN (:partnerWorkspaceSet)"/>
          <field name="createdFromSelect"/>
        </panel>
      </insert>
    </extend>
  </form>

  <form name="partner-contact-form" id="portal-partner-contact-form" title="Contact"
    model="com.axelor.apps.base.db.Partner" extension="true">
    <extend target="/">
      <attribute name="onSave" value="action-contact-group-on-save"/>
    </extend>
    <extend target="//panel-tabs[@name='mainPanelTab']/*[last()]">
      <insert position="after">
        <panel title="Portal" name="portalPanel">
          <field name="portalPassword" widget="password"/>
          <field name="linkedinLink"/>
          <field name="isRegisteredOnPortal" colSpan="3"/>
          <field name="isActivatedOnPortal" colSpan="3"/>
          <field name="createdFromSelect"/>
          <field name="contactWorkspaceConfigSet" widget="TagSelect" colSpan="12"/>
        </panel>
      </insert>
    </extend>
  </form>

  <action-group name="action-partner-group-onsave"
    id="portal-action-partner-group-onsave">
    <action name="action-partner-iban-check-on-save"/>
    <action name="save"/>
    <action name="action-partner-method-set-user-partner"/>
    <action name="action-method-partner-check-registration-code"/>
    <action name="action-partner-method-create-user-mattermost"/>
  </action-group>

  <action-method name="action-partner-method-create-user-mattermost">
    <call class="com.axelor.apps.portal.mattermost.web.PartnerController" method="createUser"/>
  </action-method>

  <action-group name="action-contact-group-on-save">
    <action name="save"/>
    <action name="action-partner-method-set-user-partner"/>
    <action name="action-partner-method-add-contact-partner"/>
    <action name="action-partner-method-create-user-mattermost"/>
  </action-group>


</object-views>