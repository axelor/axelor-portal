<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_7.0.xsd">

  <grid model="com.axelor.apps.portal.db.PortalCmsSite" title="CMS sites"
    name="portal-portal-cms-site-grid">
    <field name="name"/>
  </grid>

  <form model="com.axelor.apps.portal.db.PortalCmsSite" title="CMS site"
    name="portal-portal-cms-site-form" width="large">
    <panel name="mainPanel" colSpan="12">
      <field name="name" required="true"/>
      <field name="slug"/>
      <field name="mainWebsite"/>
      <field name="isGuestUserAllow" colSpan="2"/>
      <field name="isPrivate" colSpan="2"/>
      <field name="menu"/>
      <field name="header"/>
      <field name="footer"/>
      <field name="homepage"/>
      <field name="partnerSet" colSpan="12" showIf="isPrivate"/>
      <field name="partnerCategorySet" colSpan="12" showIf="isPrivate"/>
    </panel>
  </form>

</object-views>