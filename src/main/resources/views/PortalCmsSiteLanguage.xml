<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_7.0.xsd">

  <grid model="com.axelor.apps.portal.db.PortalCmsSiteLanguage" title="CMS site languages"
    name="portal-portal-cms-site-language-grid">
    <field name="language"/>
    <field name="website"/>
  </grid>

  <form model="com.axelor.apps.portal.db.PortalCmsSiteLanguage" title="CMS site language"
    name="portal-portal-cms-site-language-form" width="large">
    <panel name="mainPanel" colSpan="12">
      <field name="language" required="true"/>
      <field name="website" required="true"/>
    </panel>
  </form>

</object-views>