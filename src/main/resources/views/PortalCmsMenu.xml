<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_7.0.xsd">

  <grid model="com.axelor.apps.portal.db.PortalCmsMenu" title="CMS menus"
    name="portal-portal-cms-menu-grid">
    <field name="title"/>
    <field name="component"/>
    <field name="language"/>
  </grid>

  <form model="com.axelor.apps.portal.db.PortalCmsMenu" title="CMS menu"
    name="portal-portal-cms-menu-form" width="large">
    <panel name="mainPanel" colSpan="12">
      <field name="title"/>
      <field name="component" domain="COALESCE(self.typeSelect, 1) != 1"/>
      <field name="language"/>
      <field name="menuList" colSpan="12"/>
    </panel>
  </form>

</object-views>