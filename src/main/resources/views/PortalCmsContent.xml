<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_7.0.xsd">

  <grid model="com.axelor.apps.portal.db.PortalCmsContent" title="CMS contents"
    name="portal-portal-cms-content-grid">
    <field name="title"/>
    <field name="component"/>
    <field name="language"/>
  </grid>

  <form model="com.axelor.apps.portal.db.PortalCmsContent" title="CMS content"
    name="portal-portal-cms-content-form" width="large">
    <panel name="mainPanel" colSpan="12">
      <field name="title" required="true"/>
      <field name="component"/>
      <field name="language"/>
    </panel>
  </form>

</object-views>