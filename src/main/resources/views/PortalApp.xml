<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_7.0.xsd">

  <grid name="portal-app-grid" title="Portal apps" model="com.axelor.apps.portal.db.PortalApp">
    <field name="name"/>
    <field name="code"/>
  </grid>

  <form name="portal-app-form" title="Portal app" model="com.axelor.apps.portal.db.PortalApp">
    <panel name="mainPanel">
      <field name="name" required="true"/>
      <field name="code" required="true"/>
      <field name="showInTopMenu"/>
      <field name="orderForTopMenu" showIf="showInTopMenu"/>
      <field name="showInMySpace"/>
      <field name="orderForMySpaceMenu" showIf="showInMySpace"/>
      <field name="color" widget="SingleSelect"/>
      <field name="background" widget="SingleSelect"/>
      <field name="icon"/>
      <field name="dependnecySet" colSpan="12" widget="TagSelect"/>
      <field name="description" colSpan="12"/>
    </panel>
    <panel name="sidePanel" sidebar="true">
      <field name="installed"/>
    </panel>
  </form>

</object-views>