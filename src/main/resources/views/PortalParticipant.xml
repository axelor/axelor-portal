<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_7.0.xsd">

  <grid name="portal-portal-participant-grid" title="Portal participants"
    model="com.axelor.apps.portal.db.PortalParticipant" canMove="true" orderBy="sequence">
    <field name="name"/>
    <field name="surname"/>
    <field name="registration.event"/>
    <field name="categorySet" widget="TagSelect"/>
    <field name="sequence" hidden="true"/>
  </grid>

  <form name="portal-portal-participant-form" title="Portal participant"
    model="com.axelor.apps.portal.db.PortalParticipant">
    <panel name="mainPanel">
      <field name="name" required="true"/>
      <field name="surname"/>
      <field name="emailAddress" widget="email"/>
      <field name="phone" widget="phone" x-placeholder-number-type="FIXED_LINE"/>
      <field name="contact" form-view="partner-contact-form" grid-view="partner-contact-grid"/>
      <field name="company" title="Company/Address"/>
      <field name="registration.event"/>
      <field name="registration" hidden="true"/>
      <field name="subscriptionSet" widget="TagSelect" colSpan="12"
        onSelect="action-portal-attrs-portal-participant-subscriptionset-onselect"/>
      <field name="contactAttrs" colSpan="12"/>
      <field name="sequence" hidden="true"/>
    </panel>
  </form>

  <action-attrs name="action-portal-attrs-portal-participant-subscriptionset-onselect">
    <attribute name="domain" for="subscriptionSet"
      expr="eval: &quot;self.id IN (${registration?.event?.facilityList?.collect{it.id}?.join(',')})&quot;"/>
  </action-attrs>

</object-views>