<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_7.0.xsd">

  <grid name="portal-portal-participant-grid" title="Portal participants"
    model="com.axelor.apps.portal.db.PortalParticipant" canMove="true" orderBy="sequence" editable="true">
    <field name="titleSelect"/>
    <field name="name" title="First name"/>
    <field name="surname" title="Last name"/>
    <field name="registration.event"/>
    <field name="categorySet" widget="TagSelect"/>
    <field name="sequence" hidden="true"/>
    <field name="isAttended"/>
  </grid>

  <grid name="portal-portal-participant-event-grid" title="Portal participants"
    model="com.axelor.apps.portal.db.PortalParticipant" width="large">
    <field name="titleSelect"/>
    <field name="name" title="First name"/>
    <field name="surname" title="Last name"/>
    <field name="emailAddress" widget="email"/>
    <field name="phone" widget="phone"/>
    <field name="isAttended"/>
    <field name="subscriptionSet" widget="TagSelect"/>
  </grid>

  <grid name="portal-portal-participant-event-editable-grid" title="Portal participants"
    model="com.axelor.apps.portal.db.PortalParticipant" width="large" editable="true">
    <field name="titleSelect"/>
    <field name="name" title="First name"/>
    <field name="surname" title="Last name"/>
    <field name="emailAddress" widget="email"/>
    <field name="phone" widget="phone"/>
    <field name="isAttended"/>
    <field name="subscriptionSet" widget="TagSelect"/>
  </grid>

  <form name="portal-portal-participant-form" title="Portal participant"
    model="com.axelor.apps.portal.db.PortalParticipant"
    onNew="action-portal-participant-record-fill-registration-if-available,
    action-portal-participant-attrs-fill-additional-fields-dummies"
    onLoad="action-portal-participant-attrs-fill-additional-fields-dummies">
    <panel name="mainPanel">
      <field name="titleSelect" colSpan="2"/>
      <field name="name" required="true" colSpan="5"/>
      <field name="surname" colSpan="5"/>
      <field name="emailAddress" widget="email"/>
      <field name="phone" widget="phone" x-placeholder-number-type="FIXED_LINE"/>
      <field name="contact" form-view="partner-contact-form" grid-view="partner-contact-grid"/>
      <field name="company" title="Company/Address"/>
      <field name="registration.event"/>
      <field name="isAttended"/>
      <field name="registration" hidden="true"/>
      <field name="subscriptionSet" widget="TagSelect" colSpan="12"
        onSelect="action-portal-attrs-portal-participant-subscriptionset-onselect" onChange="action-portal-participant-attrs-fill-additional-fields-dummies"/>
      <field name="contactAttrs" colSpan="12"/>
      <field name="sequence" hidden="true"/>
      <!-- These two fields are used in the show if condition of custom fields-->
      <field name="$subscriptionAdditionalFieldsSet" type="many-to-many" target="com.axelor.meta.db.MetaJsonField" hidden="true"/>
      <field name="$eventAdditionalFieldsSet" type="many-to-many" target="com.axelor.meta.db.MetaJsonField" hidden="true"/>
    </panel>
  </form>

  <action-attrs name="action-portal-attrs-portal-participant-subscriptionset-onselect">
    <attribute name="domain" for="subscriptionSet" if="registration?.event?.facilityList &amp;&amp; !registration.event.facilityList.empty"
      expr="eval: &quot;self.id IN (${registration?.event?.facilityList?.collect{it.id}?.join(',')})&quot;"/>
    <attribute name="domain" for="subscriptionSet" if=" !registration?.event?.facilityList || registration.event.facilityList.empty"
      expr="eval: &quot;self.id IN (-1)&quot;"/>
  </action-attrs>

  <action-attrs name="action-portal-participant-attrs-fill-additional-fields-dummies">
    <attribute for="$subscriptionAdditionalFieldsSet" name="value" expr="eval: subscriptionSet == null || subscriptionSet.empty ? null : subscriptionSet.collectMany{it.additionalFieldSet}"/>
    <attribute for="$eventAdditionalFieldsSet" name="value" expr="eval: registration?.event?.additionalFieldSet?.empty ? null : registration.event.additionalFieldSet"/>
  </action-attrs>

  <action-record name="action-portal-participant-record-fill-registration-if-available" model="com.axelor.apps.portal.db.PortalParticipant">
    <field name="registration" if="_parent != null &amp;&amp; _parent._model == 'com.axelor.apps.portal.db.Registration'"
      expr="eval:  __parent__"/>
  </action-record>

</object-views>