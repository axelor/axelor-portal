<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_7.0.xsd">

  <grid name="portal-theme-grid" title="Themes" model="com.axelor.apps.portal.db.PortalTheme">
    <field name="name"/>
  </grid>

  <form name="portal-theme-form" title="Theme" model="com.axelor.apps.portal.db.PortalTheme">
    <panel name="mainPanel">
      <field name="name" required="true"/>
      <field name="css" colSpan="12" widget="code-editor" x-code-syntax="json"/>
    </panel>
  </form>

</object-views>