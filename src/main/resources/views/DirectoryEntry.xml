<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_7.0.xsd">

  <grid name="directory-entry-grid" title="Directory entries"
    model="com.axelor.apps.portal.db.DirectoryEntry">
    <field name="directoryEntryTitle"/>
  </grid>

  <form name="directory-entry-form" title="Directory entry"
    model="com.axelor.apps.portal.db.DirectoryEntry" width="large">
    <panel name="mainPanel">
      <panel name="imagePanel" colSpan="2">
        <field name="directoryEntryImage" widget="Image" colSpan="12" showTitle="false"/>
      </panel>
      <panel name="infoPanel" colSpan="10">
        <field name="directoryEntryTitle" required="true" colSpan="12"/>
        <field name="directoryEntryAddress" colSpan="12"/>
        <field name="directoryEntryCity"/>
        <field name="directoryEntryZipcode" colSpan="4"/>
        <field name="isdirectoryMap" colSpan="2"/>
      </panel>
    </panel>
    <panel name="detailsPanel">
      <field name="directoryEntryLinkedIn"/>
      <field name="directoryEntryInstagram"/>
      <field name="directoryEntryX"/>
      <field name="directoryEntryWebsite" widget="url"/>
      <field name="directoryEntryCategorySet" colSpan="12" widget="TagSelect"/>
      <field name="directoryContactSet" colSpan="12" widget="TagSelect"/>
      <field name="directoryEntryDescription" colSpan="12" widget="html"/>
    </panel>
  </form>

</object-views>