<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_7.0.xsd">

  <grid name="portal-portal-event-category-grid" title="Portal event categories"
    model="com.axelor.apps.portal.db.PortalEventCategory">
    <field name="name"/>
    <field name="color" widget="SingleSelect"/>
  </grid>

  <form name="portal-portal-event-category-form" title="Portal event category"
    model="com.axelor.apps.portal.db.PortalEventCategory" width="large"
    onNew="action-portal-event-category-attrs-set-workspace">
    <panel name="mainPanel">
      <panel name="imagePanel" colSpan="2">
        <field name="image" widget="Image" colSpan="12" showTitle="false"
          onChange="action-portal-event-category-record-create-thumbnail-image"/>
        <field name="thumbnailImage" hidden="true" colSpan="12"/>
      </panel>
      <panel name="infoPanel" colSpan="10">
        <field name="name" required="true" colSpan="11"/>
        <field name="isPrivate" colSpan="1"/>
        <field name="color" widget="SingleSelect"/>
        <field name="workspace"/>
      </panel>
      <field name="description" colSpan="12"/>
      <field name="partnerSet" colSpan="12" showIf="isPrivate"/>
      <field name="partnerCategorySet" colSpan="12" showIf="isPrivate"/>
    </panel>
  </form>

  <action-attrs name="action-portal-event-category-attrs-set-workspace">
    <attribute name="value" for="workspace" expr="eval: __user__.workspace"
      if="__user__.workspace != null"/>
    <attribute name="value" for="workspace" expr="eval: __parent__.workspace"
      if="__parent__.workspace != null"/>
    <attribute name="readonly" for="workspace" expr="eval: __parent__ != null"/>
  </action-attrs>

  <action-record name="action-portal-event-category-record-create-thumbnail-image"
    model="com.axelor.apps.portal.db.PortalEventCategory">
    <field name="thumbnailImage"
      expr="call: com.axelor.apps.portal.utils.ImageUtils:createThumbnail(image)"/>
  </action-record>

</object-views>