<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_7.0.xsd">

  <grid name="portal-contact-workspace-config-grid" title="Contact workspace configs"
    model="com.axelor.apps.portal.db.PortalContactWorkspaceConfig">
    <field name="name"/>
    <field name="portalWorkspace"/>
  </grid>

  <form name="portal-contact-workspace-config-form" title="Contact workspace config"
    model="com.axelor.apps.portal.db.PortalContactWorkspaceConfig" width="large"
    onSave="action-portal-contact-workspace-config-method-update-contact-access-to-chat">
    <panel name="mainPanel">
      <field name="name"/>
      <field name="portalWorkspace" colSpan="5"/>
      <field name="isAdmin" colSpan="1"/>
      <field name="partner" form-view="partner-form" grid-view="partner-grid"
        domain="self.isContact IS NOT TRUE"/>
      <field name="contactAppPermissionList" colSpan="12" hideIf="isAdmin"/>
    </panel>
  </form>

  <action-method
    name="action-portal-contact-workspace-config-method-update-contact-access-to-chat">
    <call class="com.axelor.apps.portal.mattermost.web.PortalContactWorkspaceConfigController"
      method="updateChatAccessForContacts"/>
  </action-method>

</object-views>