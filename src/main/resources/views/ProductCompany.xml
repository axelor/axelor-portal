<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_7.0.xsd">

  <form name="product-company-form" title="Product per company"
    model="com.axelor.apps.base.db.ProductCompany" extension="true">
    <extend target="//field[@name='company']">
      <attribute name="onChange"
        value="action-product-company-record-set-currency,portal-action-product-company-record-assign-slug"/>
      <insert position="after">
        <field name="slug" hidden="true" colSpan="12"/>
      </insert>
    </extend>
  </form>

  <action-record name="portal-action-product-company-record-assign-slug"
    model="com.axelor.apps.base.db.ProductCompany">
    <field name="slug"
      expr="eval: __parent__?.slug?.concat('-')?.concat(company?.name?.toLowerCase()?.replaceAll(/[^a-z0-9]+/, '-')?.replaceAll(/(^-+|-+$)/, ''))"/>
  </action-record>

</object-views>