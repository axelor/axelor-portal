<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_7.0.xsd">

  <grid name="directory-category-grid" title="Directory categories"
    model="com.axelor.apps.portal.db.DirectoryCategory">
    <field name="directoryCategoryTitle"/>
    <field name="directoryCategoryIcon"/>
    <field name="directoryCategoryColorSelect" widget="SingleSelect"/>
  </grid>

  <form name="directory-category-form" title="Directory category"
    model="com.axelor.apps.portal.db.DirectoryCategory" width="large">
    <panel name="mainPanel">
      <field name="directoryCategoryTitle" required="true" colSpan="12"/>
      <field name="directoryCategoryIcon"/>
      <field name="directoryCategoryColorSelect" widget="SingleSelect"/>
      <field name="directoryCategorySet" widget="TagSelect" colSpan="12"
        domain="self.id != :id"/>
    </panel>
  </form>

</object-views>