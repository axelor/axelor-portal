<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_7.0.xsd">

  <grid name="portal-workspace-grid" title="Workspaces"
    model="com.axelor.apps.portal.db.PortalWorkspace">
    <field name="name"/>
    <field name="url"/>
    <field name="defaultTheme"/>
  </grid>

  <form name="portal-workspace-form" title="Workspace"
    model="com.axelor.apps.portal.db.PortalWorkspace">
    <panel name="mainPanel">
      <panel name="imagePanel" colSpan="2">
        <field name="workspaceLogo" widget="Image" colSpan="12" showTitle="false"/>
      </panel>
      <panel name="infoPanel" colSpan="10">
        <field name="name"/>
        <field name="navigationSelect"/>
        <field name="url" widget="url" colSpan="12"/>
      </panel>
    </panel>
    <panel name="detailPanel">
      <field name="defaultTheme"/>
      <field name="defaultPartnerWorkspace"/>
      <field name="allowRegistrationSelect"/>
      <field name="defaultGuestWorkspace"/>
      <field name="user"/>
    </panel>
  </form>

</object-views>