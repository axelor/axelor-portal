<?xml version="1.0" encoding="UTF-8"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views
  https://axelor.com/xml/ns/object-views/object-views_7.1.xsd">

  <grid model="com.axelor.apps.portal.db.Hyperlink" title="Hyperlinks" name="hyperlink-grid">
    <field name="logo"/>
    <field name="link"/>
  </grid>

  <form model="com.axelor.apps.portal.db.Hyperlink" title="Hyperlink" name="hyperlink-form">
    <panel name="hyperlinkPanel" title="Hyperlink" colSpan="12">
      <panel name="logoPanel" colSpan="2">
        <field name="logo" widget="image"/>
      </panel>
      <panel name="fieldsPanel" colSpan="10">
        <field name="link" widget="url"/>
      </panel>
    </panel>
  </form>

</object-views>
