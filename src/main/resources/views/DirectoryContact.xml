<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_7.0.xsd">

  <grid name="directory-contact-grid" title="Directory contacts"
    model="com.axelor.apps.portal.db.DirectoryContact">
    <field name="firstName"/>
    <field name="lastName"/>
    <field name="email" widget="email"/>
    <field name="phoneNumber" widget="phone"/>
    <field name="linkedinLink" widget="url"/>
  </grid>

  <form name="directory-contact-form" title="Directory contact"
    model="com.axelor.apps.portal.db.DirectoryContact" width="large">
    <panel name="mainPanel">
      <field name="firstName" required="true"/>
      <field name="lastName"/>
      <field name="email" widget="email"/>
      <field name="phoneNumber" widget="phone" x-placeholder-number-type="FIXED_LINE"/>
      <field name="linkedinLink"/>
    </panel>
  </form>

</object-views>