<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_7.0.xsd">

  <form name="product-category-form" id="portal-product-category-form" title="Product category"
    model="com.axelor.apps.base.db.ProductCategory" extension="true">
    <extend target="/">
      <attribute name="onNew" value="action-product-category-attrs-set-workspace"/>
    </extend>
    <extend target="//field[@name='name']">
      <attribute name="onChange" value="action-portal-product-category-record-assign-slug"/>
    </extend>
    <extend target="//panel[@name='mainPanel']/*[last()]">
      <insert position="after">
        <panel name="portalPanel" title="Portal" colSpan="12">
          <panel name="imagePanel" colSpan="2">
            <field name="portalImage" widget="Image" colSpan="12"/>
          </panel>
          <panel name="detailsPanel" colSpan="10">
            <field name="portalWorkspace" colSpan="3"/>
            <field name="filterOnBrand" colSpan="3"/>
            <field name="isFeatured" colSpan="3"/>
            <field name="isPrivate" colSpan="3"/>
            <field name="slug" pattern="^[a-z0-9-]*$"/>
            <field name="productList" colSpan="12" widget="TagSelect"/>
            <field name="productVariantAttrSet" widget="TagSelect" colSpan="12"/>
          </panel>
        </panel>
        <panel name="visibilityPanel" colSpan="12" itemSpan="12">
          <field name="partnerSet" showIf="isPrivate"/>
          <field name="partnerCategorySet" showIf="isPrivate"/>
        </panel>
      </insert>
    </extend>
  </form>

  <action-attrs name="action-product-category-attrs-set-workspace">
    <attribute name="value" for="portalWorkspace" expr="eval: __user__.workspace"/>
  </action-attrs>

  <action-record name="action-portal-product-category-record-assign-slug"
    model="com.axelor.apps.base.db.ProductCategory">
    <field name="slug"
      expr="eval: name?.toLowerCase()?.replaceAll(/[^a-z0-9]+/, '-').replaceAll(/(^-+|-+$)/, '')"/>
  </action-record>

</object-views>