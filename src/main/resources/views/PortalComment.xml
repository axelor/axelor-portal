<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_7.0.xsd">

  <grid name="portal-portal-comment-grid" title="Portal comments"
    model="com.axelor.apps.portal.db.PortalComment">
    <field name="contentComment"/>
    <field name="publicationDateTime"/>
  </grid>

  <form name="portal-portal-comment-form" title="Portal comment"
    model="com.axelor.apps.portal.db.PortalComment" width="large">
    <panel name="mainPanel">
      <panel name="imagePanel" colSpan="2">
        <field name="image" widget="Image" colSpan="12" showTitle="false"/>
      </panel>
      <panel name="infoPanel" colSpan="10">
        <field name="publicationDateTime"/>
        <field name="author"/>
        <field name="parentNews" showIf="parentNews"/>
        <spacer name="newSpacer" showIf="parentNews"/>
        <field name="portalEvent" showIf="portalEvent"/>
        <spacer name="eventSpecer" showIf="portalEvent"/>
        <field name="forumPost" showIf="forumPost"/>
      </panel>
      <field name="contentComment" required="true" colSpan="12"/>
      <field name="childCommentList" colSpan="12"/>
      <panel name="postAttachmentPanel">
        <field name="attachmentList" colSpan="12">
          <editor x-viewer="true">
            <field name="metaFile" showTitle="false" widget="binary-link"
              form-view="meta-files-form" grid-view="meta-files-grid" colSpan="4"/>
            <field name="title" showTitle="false" colSpan="8"/>
          </editor>
        </field>
      </panel>
    </panel>
  </form>

</object-views>