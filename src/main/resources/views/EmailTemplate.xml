<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_7.0.xsd">

  <grid name="email-template-grid" title="Email template"
    model="com.axelor.apps.portal.db.EmailTemplate" editable="true">
    <field name="template" required="true"/>
    <field name="localization" required="true"/>
  </grid>

  <form name="email-template-form" title="Email template"
    model="com.axelor.apps.portal.db.EmailTemplate" width="large">
    <panel name="mainPanel">
      <field name="template" required="true"/>
      <field name="localization" required="true"/>
    </panel>
  </form>

</object-views>