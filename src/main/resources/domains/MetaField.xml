<?xml version="1.0" encoding="UTF-8"?>
<domain-models xmlns="http://axelor.com/xml/ns/domain-models"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/domain-models http://axelor.com/xml/ns/domain-models/domain-models_7.1.xsd">

  <module name="meta" package="com.axelor.meta.db"/>

  <entity name="MetaField" table="META_FIELD" cacheable="true">

    <boolean name="isTrackAsPublicField" title="Track as a public field" default="false"/>

    <finder-method name="findByNameAndModelAndPublic"
      using="name,String:metaModelName,isTrackAsPublicField"
      filter="self.name = :name AND self.metaModel.fullName = :metaModelName AND self.isTrackAsPublicField = :isTrackAsPublicField"/>

  </entity>

</domain-models>
