<?xml version="1.0" encoding="UTF-8"?>
<domain-models xmlns="http://axelor.com/xml/ns/domain-models"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/domain-models http://axelor.com/xml/ns/domain-models/domain-models_6.1.xsd">

  <module name="base" package="com.axelor.apps.base.db"/>

  <entity name="Product">

    <string name="subtitle" title="Subtitle"/>
    <string name="longDescription" large="true" title="Long description"/>
    <boolean name="homepage" title="Homepage"/>
    <many-to-many ref="com.axelor.apps.base.db.ProductCategory"
      name="protalCategorySet" title="Portal Categories"/>
    <boolean name="sellOutOfStock" title="Continue selling out of stock"/>
    <boolean name="allowCustomNote" title="Allow custom note"/>
    <many-to-one ref="com.axelor.apps.portal.db.Brand" name="brand" title="Brand"/>
    <many-to-one name="portalWorkspace" ref="com.axelor.apps.portal.db.PortalWorkspace"
      title="Workspace"/>
    <date name="portalDate" title="Portal date"/>
    <integer name="featured" title="Featured"/>
    <one-to-many ref="com.axelor.apps.base.db.ProductPicture" name="portalImageList"
      title="Portal images" mappedBy="product"/>
    <many-to-many ref="com.axelor.apps.base.db.Product" name="portalAvailableOptionSet"
      title="Portal available options"/>
    <many-to-many ref="com.axelor.apps.base.db.Product"
      name="portalAssociatedProductSet" title="Portal associated products"/>
    <decimal name="leftQty" title="Left qty"/>

  </entity>

</domain-models>
