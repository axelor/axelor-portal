<?xml version="1.0" encoding="UTF-8"?>
<domain-models xmlns="http://axelor.com/xml/ns/domain-models"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/domain-models http://axelor.com/xml/ns/domain-models/domain-models_6.1.xsd">

  <module name="portal" package="com.axelor.apps.portal.db"/>

  <entity name="PortalWorkspace">

    <string name="url" title="URL" namecolumn="true"/>
    <many-to-one name="defaultWebsiteconfig"
      ref="com.axelor.apps.portal.db.WebsiteConfig" title="Default websiteconfig"/>
    <many-to-one name="defaultTheme" ref="com.axelor.apps.portal.db.PortalTheme"/>
    <string name="allowRegistrationSelect" title="Allow registration ?"
      selection="allow.registration.select"/>
    <string name="publicEshopSelect" title="Public eshop" selection="public.eshop.select"/>
    <integer name="nbOfProductsPerPage"/>
    <one-to-many ref="com.axelor.apps.portal.db.PortalPaymentConfig"
      name="paymentOptions" mappedBy="portalWorkspace"/>

  </entity>

</domain-models>
