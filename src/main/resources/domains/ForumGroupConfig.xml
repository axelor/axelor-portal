<?xml version="1.0" encoding="UTF-8"?>
<domain-models xmlns="http://axelor.com/xml/ns/domain-models"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/domain-models http://axelor.com/xml/ns/domain-models/domain-models_7.0.xsd">

  <module package="com.axelor.apps.portal.db" name="portal"/>

  <entity name="ForumGroupConfig">
    <string name="name"/>
    <string name="accessTypeSelect" title="Access type" selection="access.type.select"/>
    <many-to-many ref="com.axelor.apps.base.db.Partner" name="partnerSet"
      title="Partners"/>
    <many-to-many ref="com.axelor.apps.base.db.PartnerCategory"
      name="partnerCategorySet" title="Partner categories"/>
    <string name="subscribeSelect" title="Subscribe type" selection="subscribe.type.select"/>

    <extra-code>
  		<![CDATA[
  			public static final String ALL_PARTNERS = "allPartners";
  			public static final String SELECTED_PARTNERS = "selectedPartners";
  			public static final String SELECTED_CATEGORIES = "selectedCategories";

  			public static final String ALWAYS = "always";
  			public static final String GROUP_SUBSCRIBE = "groupSubscribe";
  		]]>
    </extra-code>
  </entity>

</domain-models>