<?xml version="1.0" encoding="UTF-8"?>
<domain-models xmlns="http://axelor.com/xml/ns/domain-models"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/domain-models http://axelor.com/xml/ns/domain-models/domain-models_7.0.xsd">

  <module name="portal" package="com.axelor.apps.portal.db"/>

  <entity name="PortalApp">

    <string name="name"/>
    <string name="code" unique="true"/>
    <string name="description" large="true"/>
    <boolean name="isInstalled"/>
    <string name="color" selection="color.name.selection"/>
    <string name="background" selection="color.name.selection"/>
    <string name="icon"/>
    <many-to-many name="dependnecySet" ref="com.axelor.apps.portal.db.PortalApp"
      title="Dependencies"/>
    <boolean name="showInTopMenu" title="Show in top menu ?"/>
    <boolean name="showInMySpace" title="Show in my space ?"/>
    <integer name="orderForTopMenu" title="Order for top menu "/>
    <integer name="orderForMySpaceMenu" title="Order for 'my space' menu"/>

  </entity>

</domain-models>
