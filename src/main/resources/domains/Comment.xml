<?xml version="1.0" encoding="UTF-8"?>
<domain-models xmlns="http://axelor.com/xml/ns/domain-models"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/domain-models http://axelor.com/xml/ns/domain-models/domain-models_7.0.xsd">

  <module name="base" package="com.axelor.apps.base.db"/>

  <entity name="Comment">

    <many-to-one name="parentComment" ref="com.axelor.apps.base.db.Comment"
      title="Parent comment"/>
    <one-to-many name="childCommentList" ref="com.axelor.apps.base.db.Comment"
      mappedBy="parentComment"/>
    <many-to-one ref="com.axelor.apps.portal.db.ForumPost" name="forumPost"/>
    <many-to-one ref="com.axelor.apps.portal.db.PortalEvent" name="portalEvent"/>
    <many-to-one ref="com.axelor.apps.portal.db.PortalNews" name="portalNews"/>

  </entity>

</domain-models>
