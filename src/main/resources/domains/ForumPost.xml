<?xml version="1.0" encoding="UTF-8"?>
<domain-models xmlns="http://axelor.com/xml/ns/domain-models"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/domain-models http://axelor.com/xml/ns/domain-models/domain-models_7.0.xsd">

  <module package="com.axelor.apps.portal.db" name="portal"/>

  <entity name="ForumPost">
    <string name="title" namecolumn="true"/>
    <string name="content" large="true"/>
    <datetime name="postDateT" title="Post date and time"/>
    <many-to-one ref="com.axelor.apps.portal.db.ForumGroup" name="forumGroup"/>
    <one-to-many ref="com.axelor.apps.portal.db.PostAttachment" name="attachmentList"
      mappedBy="forumPost"/>
    <many-to-one ref="com.axelor.apps.base.db.Partner" name="author"/>
    <one-to-many ref="com.axelor.apps.portal.db.PortalComment" name="commentList"
      mappedBy="forumPost"/>
  </entity>

</domain-models>