<?xml version="1.0" encoding="UTF-8"?>
<domain-models xmlns="http://axelor.com/xml/ns/domain-models"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/domain-models http://axelor.com/xml/ns/domain-models/domain-models_7.0.xsd">

  <module package="com.axelor.apps.portal.db" name="portal"/>

  <entity name="PortalCmsSite">
    <string name="name" title="Name"/>
    <string name="slug" unique="true"/>
    <boolean name="isGuestUserAllow" title="Available for guest user"/>
    <boolean name="isPrivate" title="Private"/>
    <boolean name="isWiki" title="Wiki"/>
    <many-to-one ref="com.axelor.apps.portal.db.PortalCmsContent" name="header"/>
    <many-to-one ref="com.axelor.apps.portal.db.PortalCmsContent" name="footer"/>
    <many-to-one ref="com.axelor.apps.portal.db.PortalCmsPage" name="homepage"/>
    <many-to-one ref="com.axelor.apps.portal.db.PortalCmsMenu" name="menu"/>
    <many-to-one ref="com.axelor.apps.portal.db.PortalCmsMainWebsite" name="mainWebsite"/>
    <many-to-many name="partnerSet" ref="com.axelor.apps.base.db.Partner"
      title="Partners"/>
    <many-to-many name="partnerCategorySet"
      ref="com.axelor.apps.base.db.PartnerCategory" title="Partner categories"/>
  </entity>

</domain-models>